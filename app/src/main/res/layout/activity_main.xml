<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.pardyot.fidance.MainActivity">

    <ImageView
        android:id="@+id/app_name"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_main_app_name_margin_top"
        android:layout_marginBottom="@dimen/activity_main_app_name_margin_bottom"
        android:src="@drawable/app_name"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/two"
                android:text="2X2"
                android:layout_weight="0.025"
                android:background="@color/main_activity_button"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:layout_marginRight="@dimen/activity_main_margin"
                android:layout_marginEnd="@dimen/activity_main_margin"
                android:onClick="fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_button_size" />
            <Button
                android:id="@+id/three"
                android:text="3X3"
                android:layout_weight="0.025"
                android:background="@color/main_activity_button"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:onClick="fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_button_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four"
                android:text="4X4"
                android:layout_weight="0.025"
                android:background="@color/main_activity_button"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:layout_marginRight="@dimen/activity_main_margin"
                android:layout_marginEnd="@dimen/activity_main_margin"
                android:onClick="fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_button_size" />
            <Button
                android:id="@+id/five"
                android:text="5X5"
                android:layout_weight="0.025"
                android:background="@color/main_activity_button"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:onClick="fun"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_button_size" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/help"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"  
        android:src="@drawable/help"
        android:layout_marginLeft="@dimen/activity_main_margin"
        android:layout_width="@dimen/activity_main_bottom_image_size"
        android:layout_height="@dimen/activity_main_bottom_image_size" />
    <ImageView
        android:id="@+id/sound_on"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/help"
        android:src="@drawable/sound_on"
        android:layout_marginRight="@dimen/activity_main_margin"
        android:layout_width="@dimen/activity_main_bottom_image_size"
        android:layout_height="@dimen/activity_main_bottom_image_size" />
    <ImageView
        android:id="@+id/sound_off"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/help"
        android:src="@drawable/sound_off"
        android:visibility="gone"
        android:layout_marginRight="@dimen/activity_main_margin"
        android:layout_width="@dimen/activity_main_bottom_image_size"
        android:layout_height="@dimen/activity_main_bottom_image_size" />
</RelativeLayout>
